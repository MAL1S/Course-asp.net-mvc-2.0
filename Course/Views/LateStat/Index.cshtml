

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">

    <h2>Student's late statistics</h2>
    @using (Html.BeginForm("Details", "LateStat", FormMethod.Get))
    {
        @Html.AntiForgeryToken()
        <div class="col-auto">
            <form asp-action="Details" method="get">
                <div class="form-actions no-color row">
                    <div class="input-group mb-3">
                        <label>DateFrom</label>

                        <input type="date" id="from" name="from" class="form-control" placeholder="Date from" aria-label="Enter date">
                        <hr />
                        <label>DateTo</label>

                        <input type="date" id="to" name="to" class="form-control" placeholder="Date to" aria-label="Enter date">
                        <hr />
                        <input type="submit" value="Details" class="btn btn-outline-primary" />
                    </div>
                </div>
            </form>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    }
</div>